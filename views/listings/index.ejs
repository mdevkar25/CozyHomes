<% layout("layouts/boilerplate") -%>
<style>
    #filters{
        display: flex;
        flex-wrap: wrap;
        font-size: 1.2rem;
    }
    .filter{
        text-align: center;
        opacity: 0.7;
        margin-top: 2rem;
        margin-right: 4rem;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter p{
        font-size: 0.7rem;
    }

    .tax-info{
        display: none;
    }
   
    #tax-toggel{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.5rem;
        padding: 0.7rem;
        margin-top: 1.5rem;
        
    }


</style>
<body>
    
    <!-- <h1>All listings</h1> -->
    <!-- <form action="/listings/new" method="get">
        <button>Creat new listing</button>
    </form> -->
    <div id="filters" class="offset-1 ">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>swimming</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div id="tax-toggel">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" value="" id="checkNativeSwitch" switch>
                <label class="form-check-label" for="checkNativeSwitch">
                  Display Total after taxes
                </label>
            </div>
        </div>
        
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for (let lists of alllistings) {%>
        <a href="/listings/<%= lists._id %>" class="listing-links">
        <div class="card col listing-card" >
            <img src="<%= lists.image.url %>" class="card-img-top" alt="listing-image" style="height:20rem">
            <div class="card-img-overlay"></div>
            <div class="card-body">
                <b><p class="card-text"><%= lists.title %>.<br></b>
                   â‚¹ <%= lists.price.toLocaleString("en-IN") %>/Night
                   <i class="tax-info"> &nbsp;&nbsp;+18 GST</i>
                </p>
            </div>
        </div>
        </a>
         <% } %>
    </div>
    
</body>

<script>
    let taxbutton = document.getElementById("tax-toggel");
    taxbutton.addEventListener("click",()=>{
        let taxinfo = document.getElementsByClassName("tax-info");
        for(info of taxinfo){
            if(info.style.display != "inline"){
                info.style.display = "inline"
            }else{
                info.style.display = "none"
            }
        }
    })

    
</script>
